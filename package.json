{
  "devDependencies": {
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lerna": "^2.0.0-rc.5",
    "lint-staged": "^4.0.0",
    "prettier-eslint-cli": "^4.0.4"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean",
    "coverage": "jest --coverage",
    "test": "jest",
    "publish": "lerna publish --exact",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --prettier-last --write",
      "jest --findRelatedTests",
      "git add"
    ]
  }
}
